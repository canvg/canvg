{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "swc": true,
    "moduleTypes": {
      "test/**/*": "cjs"
    },
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
